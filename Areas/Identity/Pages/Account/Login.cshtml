@page
@model LoginModel

<div class="row">
    <div class="col-md-6 offset-md-1">
        <section>
            <form id="account" method="post" class="mt-5" style="background-color: #333; color: #fff; padding: 20px; border-radius: 10px;">
                <h3 class="mb-4">Log in required to use the webapp.</h3>
                <hr style="background-color: #fff;" />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert">
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" style="background-color: #555; color: #fff; border-color: #555;" />
                    <label asp-for="Input.Email" class="form-label" style="color: #fff;">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" style="background-color: #555; color: #fff; border-color: #555;" />
                    <label asp-for="Input.Password" class="form-label" style="color: #fff;">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" style="background-color: #555; color: #fff;" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-secondary" style="background-color: #555;">Log in</button>
                </div>
                <style>
                    button#login-submit:hover {
                        color: #999; 
                    }
                </style>

                <hr style="background-color: #fff;" />
                <div class="mt-3">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword" style="color: #fff;">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="color: #fff;">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" style="color: #fff;">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
